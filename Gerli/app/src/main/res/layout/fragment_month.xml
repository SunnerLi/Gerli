<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gerli.gerli.fragment.MONTH">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:id="@+id/relativelayout"
        android:layout_width="wrap_content"
        android:layout_height="600dp">


        <Button
            android:text="@string/com_facebook_share_button_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/butShare"
            android:layout_weight="1"
            style="@style/com_facebook_button_share"
            android:layout_below="@+id/chart"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="50dp" />

        <ListView
            android:id="@+id/listView1"
            android:layout_width="match_parent"
            android:cacheColorHint="#00000000"
            android:layout_height="150dp"
            android:textColor="#F1BD9D"
            android:layout_marginTop="21dp"
            android:layout_below="@+id/butShare"
            android:layout_alignParentStart="true">
        </ListView>

        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/chart"
            android:layout_width="250dp"
            android:layout_marginTop="49dp"
            android:layout_height="250dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

</ScrollView>
