<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gerli.gerli.fragment.DAY">

    <!-- TODO: Update blank fragment layout -->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="650dp"
        android:orientation="vertical">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="70dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="show date"
                android:id="@+id/choose_date_text"
                android:layout_marginTop="30dp"
                android:layout_alignParentStart="true" />

        </FrameLayout>


        <LinearLayout
            android:layout_marginTop="54dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_height="50dp"
            android:layout_width="250dp"
            android:id="@+id/L1"
            android:layout_gravity="center">

            <TextView
                android:gravity="center"
                android:text="收入"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:textColor="#353E70"
                android:id="@+id/textView6"
                android:layout_weight="1"
                />

            <TextView
                android:gravity="center"
                android:text="支出"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:textColor="#353E70"
                android:id="@+id/textView7"
                android:layout_weight="1" />

            <TextView
                android:gravity="center"
                android:text="總額"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:textColor="#353E70"
                android:id="@+id/textView8"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="250dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/L1"
            android:layout_height="50dp"
            android:layout_gravity="center">

            <TextView
                android:gravity="center"
                android:text="income"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/income"
                android:layout_weight="1" />

            <TextView
                android:gravity="center"
                android:text="expense"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/expense"
                android:layout_weight="1" />

            <TextView
                android:gravity="center"
                android:text="total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/total"
                android:layout_weight="1" />
        </LinearLayout>

        <com.github.mikephil.charting.charts.PieChart
            android:gravity="center"
            android:id="@+id/chart"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"/>

        <Button
            android:text="@string/com_facebook_share_button_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/butShareDay"
            android:layout_weight="1"
            style="@style/com_facebook_button_share"
            android:layout_below="@+id/chart"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="50dp"
            android:layout_gravity="right"/>

        <ListView
            android:id="@+id/listView1"
            android:layout_width="match_parent"
            android:cacheColorHint="#00000000"
            android:textColor="#F1BD9D"

            android:layout_marginTop="81dp"
            android:layout_below="@+id/butShareDay"
            android:layout_alignParentStart="true"
            android:layout_weight="0.24"
            android:layout_height="200dp">
        </ListView>

    </LinearLayout>


</ScrollView>
