<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <ImageView
        app:srcCompat="@drawable/gerli_type_others"
        android:id="@+id/item_img"
        android:layout_marginStart="5dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:contentDescription="Type Image" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="名稱"
        android:id="@+id/item_name"
        android:textSize="30sp"
        android:layout_marginStart="11dp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/item_img" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="金額"
        android:id="@+id/item_cost"
        android:textSize="24sp"
        android:layout_alignTop="@+id/item_img"
        android:layout_alignParentEnd="true"
        android:textColor="@color/com_facebook_blue"
        android:layout_marginRight="10dp" />

    <TextView
        android:text="支出"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/item_img"
        android:layout_alignParentEnd="true"
        android:id="@+id/item_class"
        android:textSize="18sp"
        android:layout_marginRight="10dp" />

    <TextView
        android:text="NT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/item_cost"
        android:layout_toStartOf="@+id/item_cost"
        android:id="@+id/txt_NT"
        android:textSize="24sp"
        android:textColor="@color/com_facebook_blue" />

</RelativeLayout>
